<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1C1C1C"
   android:orientation="vertical"
    android:gravity="center">
    <!-- Whatever your layout will consist of can go here -->
    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Do you want to overwrite?"
        android:textSize="20dp"
        android:layout_marginTop="-10dp"
        android:textColor="#FFFFFF"
        android:visibility="visible"
        android:background="@drawable/appbutton"
        android:width="@dimen/dialog_popup_width">
    </TextView>

    <Button
        android:id="@+id/overWriteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/message"
        android:background="@drawable/appbutton"
        android:text="Overwrite"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:width="@dimen/dialog_popup_width"/>
    <Button
        android:id="@+id/appendButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/overWriteButton"
        android:background="@drawable/appbutton"
        android:text="Append"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:width="@dimen/dialog_popup_width"/>
    <Button
        android:id="@+id/insertButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appendButton"
        android:background="@drawable/appbutton"
        android:text="Insert"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:width="@dimen/dialog_popup_width"/>
    <Button
        android:id="@+id/cancelButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/insertButton"
        android:background="@drawable/appbutton"
        android:text="Cancel"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:width="@dimen/dialog_popup_width"/>
</RelativeLayout>